<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/calepintest">

    <TextView
        android:text="ParamÃ¨tres de la partie"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:id="@+id/parametresTitre"
        android:textSize="22dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="14dp" />

    <Button
        android:text="Valider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="27dp"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="14dp"
        android:id="@+id/Valider" />

    <TextView
        android:text="Pseudo du joueur 1:"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/pseudo1"
        android:textSize="16dp"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/parametresTitre"
        android:layout_alignParentStart="true"
        android:layout_marginStart="26dp" />

    <TextView
        android:text="Pseudo du joueur 2:"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/pseudo2"
        android:layout_below="@+id/joueur1Pseudo"
        android:layout_alignStart="@+id/joueur1Pseudo"
        android:layout_marginTop="26dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:maxLength="12"
        android:ems="10"
        android:id="@+id/joueur2Pseudo"
        android:layout_below="@+id/pseudo2"
        android:layout_alignStart="@+id/pseudo2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:maxLength="12"
        android:ems="10"
        android:id="@+id/joueur1Pseudo"
        android:layout_below="@+id/pseudo1"
        android:layout_alignStart="@+id/pseudo1" />


</RelativeLayout>