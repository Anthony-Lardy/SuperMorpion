<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fenetre"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.fisso.morpiontest.MainActivity">


    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="70dp"
        android:id="@+id/pseudo1" />

    <TextView
        android:text=""
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/pseudo1"
        android:layout_centerHorizontal="true"
        android:id="@+id/jouerTourTexte" />

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/pseudo1"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="14dp"
        android:id="@+id/pseudo2" />

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/tourJouerImage"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/jouerTourTexte"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
